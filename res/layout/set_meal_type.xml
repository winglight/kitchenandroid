<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"    
    android:orientation="vertical"
    android:id="@+id/set_meal_type_layout"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bible_wheel_bg"
        android:orientation="vertical" 
        android:id="@+id/set_meal_type_wheel_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/addbtn_layout_bg"
            android:orientation="vertical" 
            >
            <Button 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:id="@+id/set_mealtype_meal_add_btn"
                android:background="@drawable/button_state"
                android:text="@string/add"
                android:textSize="@dimen/add_course_text_size"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bible_wheel_layout"
            android:orientation="horizontal" >

            <com.syt.health.kitchen.widget.WheelView
            android:id="@+id/set_mealtype_date_wheel_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
             />
        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="@android:color/black"
             />

        <com.syt.health.kitchen.widget.WheelView
            android:id="@+id/set_mealtype_meal_wheel_view"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
