<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cell_header_bg"
        android:visibility="gone"
        android:id="@+id/food_lv_header_layout"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_list_item"
        android:orientation="horizontal"
        android:layout_marginRight="2dp"
        >        
    <ImageView 
         android:layout_width="@dimen/margin_80"
         android:layout_height="@dimen/margin_80"
         android:scaleType="centerCrop"
         android:id="@+id/food_lv_photo_iv"
         android:layout_gravity="center_vertical"
         android:layout_margin="@dimen/margin_5"
         />
     <LinearLayout 
         android:layout_width="0dip"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:orientation="vertical"       
         android:layout_gravity="center_vertical"
         >       
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@android:color/black"
             android:id="@+id/food_lv_name_tv"
             android:textSize="@dimen/text_size"
             />
         <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/black"
         android:id="@+id/food_lv_info_tv"
         android:textSize="@dimen/text_size"
         />     
         <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/black"
         android:textSize="@dimen/text_size"
         android:text="(每100g可食用部分)"
         />     
     </LinearLayout>
    </LinearLayout>     
        <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cell_middle_bg"
        android:id="@+id/food_lv_middle_view"
        />
        
</LinearLayout>
