<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_home"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/activity_home_note_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_50"       
            android:gravity="center_horizontal"
            android:src="@drawable/notebookcoverbtn" />

        <LinearLayout
            android:id="@+id/activity_home_relativelayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/activity_home_more_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:background="@drawable/health_advice_bg" />

            <Button
                android:id="@+id/activity_home_buying_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:background="@drawable/buying_image" />
        </LinearLayout>
    </LinearLayout>

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="match_parent" 
       android:id="@+id/activity_home_help_iv"
       android:visibility="gone"
       />
</FrameLayout>
